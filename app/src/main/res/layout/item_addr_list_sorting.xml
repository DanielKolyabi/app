<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/separator_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#AAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sort_standart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:text="@string/sort_standart_button"
        app:layout_constraintEnd_toStartOf="@+id/sort_alphabetic"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sort_alphabetic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_alphabetic_button"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/sort_standart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sort_standart"
        app:layout_constraintTop_toTopOf="@+id/sort_standart" />


</android.support.constraint.ConstraintLayout>