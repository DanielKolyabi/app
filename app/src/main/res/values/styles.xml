<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="RedAlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/red_alert_dialog_text</item>
    </style>

    <style name="ColoredButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorFuchsia</item>
    </style>
</resources>
